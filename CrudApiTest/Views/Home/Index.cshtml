
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Empleados</h4>
                <button id="btnAddEmployee" type="button" class="btn btn-primary pull-right">
                    <i class="now-ui-icons ui-1_simple-add"></i>
                    Nuevo Empleado
                </button>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered dataTable dtr-inline employees-datatable"></table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12">
    </div>
</div>

<div id="add-employee-modal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Nuevo Empleado</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="frmAddEmployee">
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col-md-12 has-label">
                            <label>
                                Nombres*
                            </label>
                            <input class="form-control" id="names" name="names" type="text" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6 has-label">
                            <label>
                                Apellido Paterno*
                            </label>
                            <input class="form-control" id="paternalSurname" name="paternalSurname" type="text" required />
                        </div>
                        <div class="form-group col-md-6 has-label">
                            <label>
                                Apellido Materno*
                            </label>
                            <input class="form-control" id="maternalSurname" name="maternalSurname" type="text" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6 has-label">
                            <label>
                                DNI*
                            </label>
                            <input class="form-control" id="dni" name="dni" type="text" required maxlength="8" />
                        </div>
                        <div class="form-group col-md-6 has-label">
                            <label>
                                Nro. Hijos*
                            </label>
                            <input class="form-control" id="childrens" name="childrens" type="number" required />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" data-loading-text="Guardando...">
                        <i class="now-ui-icons ui-1_check"></i>
                        Guardar
                    </button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" data-loading-text="Cerrar">
                        <i class="now-ui-icons ui-1_simple-remove"></i>
                        Cerrar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div id="edit-employee-modal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Editar Empleado</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="frmEditEmployee">
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col-md-12 has-label">
                            <label>
                                Nombres*
                            </label>
                            <input class="form-control" id="names" name="names" type="text" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6 has-label">
                            <label>
                                Apellido Paterno*
                            </label>
                            <input class="form-control" id="paternalSurname" name="paternalSurname" type="text" required />
                        </div>
                        <div class="form-group col-md-6 has-label">
                            <label>
                                Apellido Materno*
                            </label>
                            <input class="form-control" id="maternalSurname" name="maternalSurname" type="text" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6 has-label">
                            <label>
                                DNI*
                            </label>
                            <input class="form-control" id="dni" name="dni" type="text" required maxlength="8" />
                        </div>
                        <div class="form-group col-md-6 has-label">
                            <label>
                                Nro. Hijos*
                            </label>
                            <input class="form-control" id="childrens" name="childrens" type="number" required />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" data-loading-text="Guardando...">
                        <i class="now-ui-icons ui-1_check"></i>
                        Guardar
                    </button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" data-loading-text="Cerrar">
                        <i class="now-ui-icons ui-1_simple-remove"></i>
                        Cerrar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.18/b-1.5.4/b-html5-1.5.4/r-2.2.2/datatables.min.css" />
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.18/b-1.5.4/b-html5-1.5.4/r-2.2.2/datatables.min.js"></script>
    <script src="~/js/home.js"></script>
}
